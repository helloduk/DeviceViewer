<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".view.MainActivity">
        
        <!-- Device Name -->

        <TextView
            android:id="@+id/device_name"
            android:layout_width="match_parent"
            android:layout_height="@dimen/device_name_height"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:gravity="center"
            android:textSize="20sp"
            android:background="#f0f0f0"
            android:textColor="#000000"
            android:text="@string/app_name"/>

        <LinearLayout
            android:id="@+id/state_layout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/state_height"
            android:layout_below="@id/device_name"
            android:layout_marginTop="@dimen/item_margin"
            >

            <TextView
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#000000"
                android:textColor="#ffffff"
                android:text="@string/machine_state"
                android:gravity="center"
                android:textSize="18sp"/>
            <TextView
                android:id="@+id/device_state"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:background="#33dd33"
                android:text="@string/machine_state_working"
                android:gravity="center"
                android:textSize="20sp"
                android:textColor="#000000"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/passed_layout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/item_height"
            android:layout_below="@id/state_layout"
            android:background="#006600"
            android:layout_marginTop="@dimen/item_margin"
            android:paddingRight="10dp"
            >

            <TextView
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/passed_counts"
                android:textColor="#ffffff"
                android:textSize="18sp"
                />
            <TextView
                android:id="@+id/passed_value"
                android:layout_width="1dp"
                android:layout_height="40dp"
                android:layout_weight="2"
                android:gravity="end|center_vertical"
                android:background="#ffffff"
                android:paddingRight="@dimen/item_margin"
                android:text="000000"
                android:textColor="#000000"
                android:textSize="18sp"/>

        </LinearLayout>


        <LinearLayout
            android:id="@+id/failed_layout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/item_height"
            android:layout_below="@id/passed_layout"
            android:background="#990000"
            android:layout_marginTop="@dimen/item_margin"
            android:paddingRight="10dp"
            >

            <TextView
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/failed_counts"
                android:textColor="#ffffff"
                android:textSize="18sp"
                />
            <TextView
                android:id="@+id/failed_value"
                android:layout_width="1dp"
                android:layout_height="40dp"
                android:layout_weight="2"
                android:gravity="end|center_vertical"
                android:background="#ffffff"
                android:paddingRight="@dimen/item_margin"
                android:text="000000"
                android:textColor="#000000"
                android:textSize="18sp"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/total_layout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/item_height"
            android:layout_below="@id/failed_layout"
            android:background="#5555ff"
            android:layout_marginTop="@dimen/item_margin"
            android:paddingRight="10dp"
            >

            <TextView
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/total_counts"
                android:textColor="#ffffff"
                android:textSize="18sp"
                />
            <TextView
                android:id="@+id/total_value"
                android:layout_width="1dp"
                android:layout_height="40dp"
                android:layout_weight="2"
                android:gravity="end|center_vertical"
                android:background="#ffffff"
                android:paddingRight="@dimen/item_margin"
                android:text="000000"
                android:textColor="#000000"
                android:textSize="18sp"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/passed_percentage_layout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/item_height"
            android:layout_below="@id/total_layout"
            android:background="#008877"
            android:layout_marginTop="@dimen/item_margin"
            android:paddingRight="10dp"
            >

            <TextView
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/passed_percentage"
                android:textColor="#ffffff"
                android:textSize="18sp"
                />
            <TextView
                android:id="@+id/passed_percentage_value"
                android:layout_width="1dp"
                android:layout_height="40dp"
                android:layout_weight="2"
                android:gravity="end|center_vertical"
                android:background="#ffffff"
                android:paddingRight="@dimen/item_margin"
                android:text="000000"
                android:textColor="#000000"
                android:textSize="18sp"/>

        </LinearLayout>


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="30dp"
            app:srcCompat="@drawable/solluzfa" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="10dp"
            android:text="@string/home_url" />
    </RelativeLayout>
</layout>